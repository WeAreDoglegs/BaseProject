<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_white_radius_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_white_radius_10_top"
            android:gravity="center"
            android:text="@string/dialog_click_upload"
            android:textColor="@color/common_gray_2"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_6" />

        <TextView
            android:id="@+id/tv_take_photo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/common_white"
            android:gravity="center"
            android:text="@string/dialog_take_phone_upload"
            android:textColor="@color/common_blue_2"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_6" />

        <TextView
            android:id="@+id/tv_album"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_white_radius_10_bottom"
            android:gravity="center"
            android:text="@string/dialog_album_upload"
            android:textColor="@color/common_blue_2"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_white_radius_10"
        android:gravity="center"
        android:text="@string/dialog_cancel"
        android:textColor="@color/common_blue_2"
        android:textSize="18sp" />


</LinearLayout>